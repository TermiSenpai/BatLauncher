<Window x:Class="BatLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:BatLauncher.Converters"
        Title="BatLauncher"
        Width="520" Height="620"
        MinWidth="400" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InvBoolToVis"/>
    </Window.Resources>

    <Border Background="#1E1E2E" CornerRadius="12" BorderBrush="#313244" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="#181825"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="&#xE756;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   Foreground="#89B4FA" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="BatLauncher" FontSize="14" FontWeight="SemiBold"
                                   Foreground="#CDD6F4" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                        <Button Content="&#xE949;" Style="{StaticResource TitleBarButton}"
                                Click="Minimize_Click"/>
                        <Button x:Name="MaxRestoreBtn" Content="&#xE739;" Style="{StaticResource TitleBarButton}"
                                Click="MaximizeRestore_Click"/>
                        <Button Content="&#xE711;" Style="{StaticResource CloseButton}"
                                Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Search Bar and Actions -->
            <Grid Grid.Row="1" Margin="16,12,16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <Border Grid.Column="0" Background="#313244" CornerRadius="8" Padding="10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                   Foreground="#6C7086" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"
                                 Style="{StaticResource SearchTextBox}"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="&#xE710;" Style="{StaticResource ActionButton}"
                            ToolTip="Add" Command="{Binding AddCommand}"
                            FontFamily="Segoe MDL2 Assets"/>
                    <Button Content="&#xE70F;" Style="{StaticResource ActionButton}"
                            ToolTip="Edit" Command="{Binding EditCommand}"
                            FontFamily="Segoe MDL2 Assets" Margin="4,0,0,0"/>
                    <Button Content="&#xE74D;" Style="{StaticResource ActionButtonDanger}"
                            ToolTip="Delete" Command="{Binding DeleteCommand}"
                            FontFamily="Segoe MDL2 Assets" Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Entry List -->
            <ListBox Grid.Row="2"
                     x:Name="EntryList"
                     ItemsSource="{Binding FilteredEntries}"
                     SelectedItem="{Binding SelectedEntry}"
                     Style="{StaticResource ModernListBox}"
                     Margin="16,0,16,0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     MouseDoubleClick="EntryList_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Border Grid.Column="0" Width="42" Height="42"
                                    CornerRadius="8" Background="#45475A"
                                    VerticalAlignment="Center">
                                <Grid>
                                    <TextBlock Text="&#xE756;" FontFamily="Segoe MDL2 Assets"
                                               FontSize="18" Foreground="#89B4FA"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding HasIcon, Converter={StaticResource InvBoolToVis}}"/>
                                    <Image Source="{Binding Icon}" Stretch="Uniform" Margin="4"
                                           Visibility="{Binding HasIcon, Converter={StaticResource BoolToVis}}"/>
                                </Grid>
                            </Border>

                            <!-- Info -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"
                                           Foreground="#CDD6F4" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding FilePath}" FontSize="11"
                                           Foreground="#6C7086" TextTrimming="CharacterEllipsis"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- Run Button -->
                            <Button Grid.Column="3" Content="&#xE768;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Style="{StaticResource RunButton}"
                                    ToolTip="Run"
                                    Command="{Binding DataContext.RunCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Empty State -->
            <StackPanel Grid.Row="2" x:Name="EmptyState"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="&#xE756;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                           Foreground="#45475A" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                <TextBlock Text="No scripts yet" FontSize="16" Foreground="#6C7086"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Click + to add your first .bat or .cmd"
                           FontSize="12" Foreground="#585B70"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Status Bar -->
            <Border Grid.Row="3" Background="#181825" CornerRadius="0,0,12,12" Padding="16,8">
                <TextBlock x:Name="StatusText" FontSize="11" Foreground="#585B70"/>
            </Border>

            <!-- Resize Grip -->
            <ResizeGrip Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Margin="0,0,4,4" Opacity="0.3"/>
        </Grid>
    </Border>
</Window>
